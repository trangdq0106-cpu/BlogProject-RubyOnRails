<section class="section comments">
  <div class="container">
      <h2 class="subtitle is-5"><strong> The Total Comments <%=  @comments_all.count %></strong> </h2>

      <table class='table'>
        <tr>
          <th>Name</th>
          <th>Short Comment</th>
          <th>Create_at</th>
          <th>Detail</th>
        </tr>
        <% @comments.each do |comment| %>
          <tr>
          <td><%= comment.Name %></td>
          <td><%= comment.comment %></td>
          <td><%= comment.created_at %></td>
          <td><%= link_to "Show this blog", blog_path(@blog) %></td>
          </tr>
        <% end %>
      </table>
  </div>
</section>

